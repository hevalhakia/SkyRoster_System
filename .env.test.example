# SkyRoster Test Environment Configuration
# This file documents the test environment variables
# Copy to .env.test and update with your test database details

# Database Configuration (Test Database)
DB_HOST=localhost
DB_PORT=3306
DB_USER=test_user
DB_PASSWORD=test_password_123
DB_NAME=skyroster_test

# Server Configuration
NODE_ENV=test
PORT=3001
APP_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only-12345
JWT_EXPIRY=24h

# CORS Configuration
CORS_ORIGINS=http://localhost:5501,http://localhost:3000

# Flight Provider API (External Service)
FLIGHT_PROVIDER_API=https://api.test.flight-provider.com
FLIGHT_PROVIDER_KEY=test-api-key-12345

# Email Configuration (Test - typically disabled)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
EMAIL_FROM=noreply@skyroster.test

# Logging Configuration
LOG_LEVEL=error
DEBUG=false

# Feature Flags (Test-specific)
ENABLE_MOCK_FLIGHTS=true
ENABLE_TEST_ENDPOINTS=true
ENABLE_DETAILED_LOGS=false

# Timeouts (Test-friendly values)
DB_TIMEOUT=5000
API_TIMEOUT=10000
JWT_REFRESH_INTERVAL=12h

# Test Data Seeding
SEED_TEST_DATA=true
TEST_DATA_SIZE=small
